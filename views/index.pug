                a.text-white.rounded-md.px-3.py-2.text-2xl.font-medium(href='/', aria-current='page') CallesPy
                a.text-white.rounded-md.px-3.py-2.text-2xl.font-medium(href='#', class='hover:bg-white hover:text-indigo-800') Acerca
                
